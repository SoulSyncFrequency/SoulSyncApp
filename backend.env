# Backend .env for Render deployment

NODE_ENV=production
PORT=5000

# Secret key for JWT auth
JWT_SECRET=super_secret_change_me

# Optional: connect to Postgres if using managed DB instead of SQLite
# PG_CONNECTION_STRING=postgres://user:password@hostname:5432/dbname

# Optional: Sentry DSN for error tracking
# SENTRY_DSN=https://public@sentry.io/project

# Optional: enable feature flags
FEATURE_FLAGS=quantum,optX

# Optional: protect Swagger docs with Basic Auth
# BASIC_AUTH_USER=admin
# BASIC_AUTH_PASS=change_me
