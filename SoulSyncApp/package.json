{
  "name": "soulsync-root",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "commit": "cz",
    "release": "standard-version",
    "release:store": "node ./scripts/releaseStore.js",
    "build:web": "cd frontend && npm run build",
    "build": "npm -w frontend run build && npm -w backend run build",
    "typecheck": "npm -w frontend run typecheck && npm -w backend run build",
    "format": "prettier --write .",
    "lint": "npm -w frontend run lint && npm -w backend run lint || true",
    "test": "npm -w frontend test --silent || true && npm -w backend test --silent || true",
    "commitlint": "commitlint --from=HEAD~1",
    "size-limit": "size-limit",
    "test:coverage": "jest --coverage --passWithNoTests",
    "check:env": "node tools/check-env.mjs",
    "test:e2e": "playwright test",
    "worker:export": "node backend/src/workers/exportWorker.js"
  },
  "devDependencies": {
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3",
    "eslint": "^9",
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "commitizen": "^4",
    "cz-conventional-changelog": "^3",
    "standard-version": "^9",
    "semantic-release": "^23.0.0",
    "@semantic-release/changelog": "^6.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.0.7",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/release-notes-generator": "^14.0.0",
    "@semantic-release/npm": "^11.0.0",
    "size-limit": "^11.1.4",
    "@size-limit/file": "^11.1.4",
    "playwright": "^1.47.0",
    "@openapitools/openapi-diff": "^0.2.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "workspaces": [
    "frontend",
    "backend",
    "mobile",
    "packages/*"
  ],
  "version": "80.0.0",
  "lint-staged": {
    "*.{js,ts,tsx,json,css,md}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=20",
    "npm": ">=9"
  },
  "size-limit": [
    {
      "path": "frontend/dist/assets/*.js",
      "limit": "500 KB"
    },
    {
      "path": "frontend/dist/assets/*.css",
      "limit": "200 KB"
    }
  ],
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "dependencies": {
    "swagger-ui-express": "^5.0.0",
    "yamljs": "^0.3.0",
    "express-oas-generator": "^1.0.48",
    "helmet": "^7.0.0",
    "express-rate-limit": "^7.1.0",
    "json2csv": "^6.0.0",
    "exceljs": "^4.4.0",
    "jsonwebtoken": "^9.0.0",
    "jwks-rsa": "^3.0.1",
    "pino": "^8.17.0",
    "@opentelemetry/sdk-node": "^0.52.0",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/resources": "^1.9.0",
    "@opentelemetry/semantic-conventions": "^1.9.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.52.0",
    "@opentelemetry/auto-instrumentations-node": "^0.52.1",
    "bullmq": "^5.6.1",
    "ioredis": "^5.3.2",
    "node-fetch": "^3.3.2",
    "prom-client": "^14.2.0"
  }
}