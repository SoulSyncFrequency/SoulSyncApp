# --- Sample backend env ---
NODE_ENV=production
PORT=8080
FRONTEND_ORIGIN=http://localhost:5173

# DB / Prisma (configure your DATABASE_URL)
# DATABASE_URL=postgresql://user:pass@db:5432/app

# SMTP
EMAIL_FROM="SoulSync <no-reply@soulsync.app>"
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=user
SMTP_PASS=pass

# Admin API
ADMIN_API_TOKEN=changeme-admin

# Metrics protection
METRICS_TOKEN=changeme-metrics
METRICS_BASIC_USER=metrics
METRICS_BASIC_PASS=secret

# Redis / BullMQ
REDIS_URL=redis://redis:6379
EMAIL_CONCURRENCY=3
WEBHOOK_CONCURRENCY=5

# Rate limits
RATE_LIMIT_PDF=10
RATE_LIMIT_TEST=10
RATE_LIMIT_REPORT=5

# SLO thresholds (fallback if DB cfg missing)
SLO_WEBHOOK_FAIL_ALERT=50
SLO_EMAIL_FAIL_ALERT=50

# Logging
LOG_TO_FILE=true
LOG_FILE_PATH=./logs/app.log
LOG_LEVEL=info
