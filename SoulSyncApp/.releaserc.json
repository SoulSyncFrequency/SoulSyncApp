{
  "branches": [
    "main",
    {
      "name": "staging",
      "prerelease": true
    },
    {
      "name": "canary",
      "prerelease": "canary"
    }
  ],
  "tagFormat": "v${version}",
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits",
        "releaseRules": [
          {
            "type": "feat",
            "release": "minor"
          },
          {
            "type": "feat",
            "breaking": true,
            "release": "major"
          },
          {
            "breaking": true,
            "release": "major"
          },
          {
            "type": "fix",
            "release": "patch"
          },
          {
            "type": "chore",
            "release": false
          },
          {
            "type": "docs",
            "release": false
          },
          {
            "type": "test",
            "release": false
          }
        ]
      }
    ],
    "@semantic-release/release-notes-generator",
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md"
      }
    ],
    [
      "@semantic-release/npm",
      {
        "pkgRoot": "backend",
        "npmPublish": false
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": [
          "CHANGELOG.md",
          "backend/package.json"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]\\n\\n${nextRelease.notes}"
      }
    ],
    "@semantic-release/github"
  ]
}