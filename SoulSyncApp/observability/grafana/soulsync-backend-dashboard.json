{
  "title": "SoulSync Backend",
  "timezone": "browser",
  "schemaVersion": 36,
  "version": 1,
  "panels": [
    {
      "type": "timeseries",
      "title": "Req duration (p95) by route",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_server_request_duration_seconds_bucket[5m])) by (le,route))",
          "legendFormat": "{{route}}"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 0
      }
    },
    {
      "type": "timeseries",
      "title": "Request rate by status",
      "targets": [
        {
          "expr": "sum(rate(http_server_request_duration_seconds_count[5m])) by (status)",
          "legendFormat": "{{status}}"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 8
      }
    },
    {
      "type": "timeseries",
      "title": "2xx/4xx/5xx share",
      "targets": [
        {
          "expr": "sum(rate(http_server_request_duration_seconds_count[5m])) by (status)",
          "legendFormat": "{{status}}"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 8
      }
    },
    {
      "type": "stat",
      "title": "Up: /healthz",
      "targets": [
        {
          "expr": "probe_success{job='backend'}",
          "legendFormat": "up"
        }
      ],
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 0,
        "y": 16
      }
    },
    {
      "type": "timeseries",
      "title": "RateLimit Remaining (sample)",
      "targets": [
        {
          "expr": "sum(rate(http_server_request_duration_seconds_count{route='/auth/login'}[5m]))",
          "legendFormat": "login rpm"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 18,
        "x": 6,
        "y": 16
      }
    }
  ]
}